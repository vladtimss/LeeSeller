{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "build",
    "preserveConstEnums": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts",
      "src/executor/**/*.ts",
      "scripts/**/*.ts",
      "webpack.config.ts"
  ],
  "exclude": ["node_modules"]
}
